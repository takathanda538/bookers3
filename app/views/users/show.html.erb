<div class= "container">
  <div class="row">
    <div class= "col-md-3">
    <%= render 'info', user: @user %>
      <% unless @user.id == current_user.id %>    #現在ログインしているユーザーではない場合
        <% if @haveRoom == true %>    #既にルームが作成されている場合は
         <%= link_to "ダイレクトメッセージ", room_path %>    #そのチャットルームに遷移するボタンを表示
        <% else %>
          <%= form_with model: @room, local: true do |f|%>    #roomsテーブルに情報を送信
            <%= fields_for @RoomUser do |r| %>    #room_usersテーブルに情報を送信
             <%= r.hidden_field :user_id, value: @user.id %>  room_usersテーブルにuser_idを含める
            <% end %>
            <%= f.submit "チャットを始める" %>
          <% end %>
        <% end %>
      <% end %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class= "table table-hover table-inverse" >
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(50,50) %>
              <% end %>
              </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
              </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>